<h1>Videos#show</h1>
<p>Find me in app/views/video/show.html.erb</p>
<%= link_to "Edit this video", edit_video_path(@video) %>
<%= link_to "Destroy this video", {action: :destroy, id: @video.id}, method: :delete %>
<br>
<br>
<br>

<%= @video.title %> </br>
<%= @video.description %> </br>
<iframe width="560" height="315" src="//www.youtube.com/embed/<%=@video.youtube_id%>" frameborder="0" allowfullscreen></iframe> </br>

<%= form_for @comment do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :video_id, :value => @comment.commentable_id %>

  <%= f.submit :message %>
<% end %>

<ul>

  <% @video.comments.each do |comment| %>
    <li><%= comment.message %></li>
  <% end %>

</ul>

